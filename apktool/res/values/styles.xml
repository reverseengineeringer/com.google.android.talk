<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.ChatSwitcher" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_im_switch_chats_strip</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="InCallTouchButton">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/incall_button</item>
        <item name="android:layout_marginLeft">8.0dip</item>
        <item name="android:layout_marginTop">8.0dip</item>
        <item name="android:layout_marginRight">8.0dip</item>
        <item name="android:layout_marginBottom">8.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="InCallTouchToggleButton">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/incall_toggle_button</item>
        <item name="android:layout_marginLeft">8.0dip</item>
        <item name="android:layout_marginTop">8.0dip</item>
        <item name="android:layout_marginRight">8.0dip</item>
        <item name="android:layout_marginBottom">8.0dip</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TallTitle" parent="@android:style/Theme.Light">
        <item name="android:windowTitleSize">60.0dip</item>
    </style>
    <style name="HuskyTitle" parent="@android:style/Theme.Light">
        <item name="android:windowTitleSize">36.0dip</item>
    </style>
    <style name="VideoChatActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#cc111111</item>
        <item name="android:backgroundSplit">#cc111111</item>
    </style>
    <style name="NoFadeButton" parent="@android:style/Widget.Holo.ActionButton">
        <item name="android:background">@drawable/no_fade_button_bg</item>
    </style>
    <style name="AddBuddyCustomActionButton" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:orientation">horizontal</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="AddBuddyCustomActionButtonImage">
        <item name="android:padding">4.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="AddBuddyCustomActionButtonText">
        <item name="android:textAppearance">?android:actionMenuTextAppearance</item>
        <item name="android:textColor">?android:actionMenuTextColor</item>
        <item name="android:ellipsize">none</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">4.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="ChatSwitcherDialogTheme">
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="TranslucentNoTitleBarTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
    <style name="VideoChatTheme.NoActionBar" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen">
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
    </style>
    <style name="VideoChatTheme" parent="@android:style/Theme.Holo">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:actionBarStyle">@style/VideoChatActionBar</item>
        <item name="android:actionBarItemBackground">@drawable/no_fade_button_bg</item>
    </style>
    <style name="Theme.Holo.Light.Wallpaper.NoTitleBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>
</resources>
